    ifeq (${THREADS}, none)
      PLATFORM_COMPILE_OPTIONS = ${COMMON_COMPILE_OPTIONS}
    else
      PLATFORM_COMPILE_OPTIONS = ${COMMON_COMPILE_OPTIONS} -D_REENTRANT
    endif
