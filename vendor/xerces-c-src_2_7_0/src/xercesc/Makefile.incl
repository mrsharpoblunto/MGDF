    PLATFORM_COMPILE_OPTIONS = -D${PLATFORM} -belf -KPIC
    MAKE_SHARED = ${CXX} -D${PLATFORM} -belf -G ${LDFLAGS}
    MAKE_SHARED_C = ${CC} -D${PLATFORM} -belf -G ${LDFLAGS}
  endif
